{% extends 'base.html.twig' %}

{% block javascript %}
    {{ parent() }}
    <script src="js/view/upload.js" async></script>
{% endblock %}

{% block content %}
    <div id="upload-form">

        <div class="alert alert-danger d-none" role="alert" id="error-alert"></div>

        <ul class="nav nav-tabs" id="upload-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="upload-tab-link" data-toggle="tab" href="#upload-tab" role="tab" aria-selected="true">
                    <i class="fas fa-file-upload"></i> Upload
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="settings-tab-link" data-toggle="tab" href="#settings-tab" role="tab" aria-selected="false">
                    <i class="fas fa-cogs"></i> Settings
                </a>
            </li>
        </ul><!-- /.nav-tabs -->

        <div class="tab-content" id="upload-tab-content">
            <div class="tab-pane show active" id="upload-tab" role="tabpanel" aria-labelledby="upload-tab">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="excel-upload-file" accept=".xls,.xlsx">
                    <label class="custom-file-label" id="excel-upload-file-label" for="excel-upload-file">Select excel-file</label>
                </div>
                <br><br>
                <button class="btn btn-primary" id="start-upload-button">
                    <i class="fas fa-file-upload"></i> Start uploading
                </button>
            </div><!-- /.tab-pane -->
            <div class="tab-pane" id="settings-tab" role="tabpanel" aria-labelledby="settings-tab">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Delimiter</label>
                    <div class="col-sm-10">
                        <select id="csv-delimiter" class="form-control">
                            <option value="," selected>,</option>
                            <option value=";">;</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="csv-utf-8-bom" checked>
                            <label class="custom-control-label" for="csv-utf-8-bom">Include UTF-8 Bom</label>
                        </div>
                    </div>
                </div>
            </div><!-- /.tab-pane -->
        </div><!-- /.tab-content -->

    </div><!-- /#upload-form -->

    <div id="loading-screen" class="d-none">
        <div class="loader mx-auto"></div><br>
        <div id="loading-text" class="text-center">Uploading ...</div>
    </div><!-- /#loading-screen -->
{% endblock %}
